{
  "title": "Change Shift to dual keys, Shift and Eject.",
  "rules": [
    {
      "description": "Change Shift to Eject if pressed with other keys, keep Shift if pressed alone. You can click Command + Option + Shift to Sleep your Mac now.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "eject"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "left_shift"
            }
          ]
        }
      ]
    }
  ]
}
